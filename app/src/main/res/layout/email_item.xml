<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/text_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle"
            android:gravity="center"
            tools:text="F"/>

        <TextView
            android:id="@+id/text_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/darkerGray"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/text_icon"
            android:layout_alignTop="@id/text_icon"
            android:layout_toStartOf="@+id/text_date"
            tools:text="Facebook"/>

        <TextView
            android:id="@+id/text_subject"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darkerGray"
            android:layout_below="@id/text_user"
            android:layout_alignStart="@id/text_user"
            tools:text="Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook"/>

        <TextView
            android:id="@+id/text_preview"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darkerGray"
            android:layout_below="@id/text_subject"
            android:layout_alignStart="@id/text_subject"
            android:layout_marginEnd="24dp"
            tools:text="Preview Preview Preview Preview Preview Preview Preview Preview Preview"/>

        <TextView
            android:id="@+id/text_date"
            android:textColor="@color/darkerGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            tools:text="20 mai"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_star_border_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>